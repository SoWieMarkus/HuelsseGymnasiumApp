<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HuelsseGymnasiumApp" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">?attr/background_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/background_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->

        <item name="background_color">@color/background_light</item>

        <item name="text_color_main">@color/text_color_main_light</item>
        <item name="icon_color">@color/text_color_main_light</item>
        <item name="line_color">@color/color_line_light</item>
        <item name="accent_color">@color/color_accent_light</item>
    </style>

    <style name="Theme.Dialog" parent="android:Theme.Material.Dialog"/>
</resources>