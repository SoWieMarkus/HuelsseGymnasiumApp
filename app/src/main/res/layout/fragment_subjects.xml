<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <markus.wieland.huelssegymnasiumapp.AverageView
        android:id="@+id/fragment_subjects_average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <markus.wieland.huelssegymnasiumapp.StateRecyclerView
        android:id="@+id/fragment_subjects_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:empty_message="@string/empty_message_subjects"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_subjects_average" />


</androidx.constraintlayout.widget.ConstraintLayout>