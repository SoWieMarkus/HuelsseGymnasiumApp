<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background_color"
    tools:context=".modules.grades.CreateGradeActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <markus.wieland.huelssegymnasiumapp.ui.input_widget.grade_input_widget.SecondaryOneGradeInputWidget
                android:id="@+id/activity_create_grade_secondary_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <markus.wieland.huelssegymnasiumapp.ui.input_widget.grade_input_widget.SecondaryTwoGradeInputWidget
                android:id="@+id/activity_create_grade_secondary_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <markus.wieland.huelssegymnasiumapp.ui.input_widget.subject_input_widget.SubjectInputWidget
                android:id="@+id/activity_create_grade_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <markus.wieland.huelssegymnasiumapp.ui.input_widget.enum_input_widget.EnumInputWidget
                android:id="@+id/activity_create_grade_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <markus.wieland.huelssegymnasiumapp.ui.input_widget.calendar_input_widget.CalendarInputWidget
                android:id="@+id/activity_create_grade_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>